<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Theme.Jcaller"
    android:layout_height="match_parent"
    tools:context=".director.Profile">


    <ImageView
        android:id="@+id/i1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/round_corner"
        android:elevation="10dp"
        android:padding="4dp"
        android:src="@drawable/ic_back"
        app:tint="@color/blue" />


    <TextView
        android:id="@+id/edit_con"
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="Edit"
        android:background="@drawable/round_corner"
        android:elevation="20dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@color/blue"
        android:elevation="7dp"
        app:cardCornerRadius="15dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="7dp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="match_parent"
            android:src="@drawable/ic_contact"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/con_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/photo"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="2sp"
        android:text="Vijay"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/con_name"
        android:weightSum="4"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_recents"
                android:contentDescription="@string/todo"
                app:tint="@color/blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="Call History"
                android:textSize="14sp"
                android:padding="2dp"
                android:gravity="center"
                android:layout_gravity="bottom" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/call_view_card"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_call"
                app:tint="@color/blue"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="Call"
                android:textSize="14sp"
                android:padding="2dp"
                android:gravity="center"
                android:layout_gravity="bottom" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/whats_view_card"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/wtsp"
                android:elevation="20dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="WhatsApp"
                android:textSize="14sp"
                android:padding="2dp"
                android:gravity="center"
                android:layout_gravity="bottom" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_email"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="Email"
                android:textSize="14sp"
                android:padding="2dp"
                android:gravity="center"
                android:layout_gravity="bottom" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:elevation="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/con_number_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/share_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:elevation="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:drawableBottom="@color/black"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:text="Share Contact"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_forward"
                    app:tint="@color/blue" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/add_to_fav_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/add_to_fav_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:text="@string/add_to_favourite"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_forward"
                    app:tint="@color/blue" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ringtone_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:drawableBottom="@color/black"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:text="Ringtone"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_forward"
                    app:tint="@color/blue" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/block_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/block_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:drawableBottom="@color/black"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:text="Block this Contact"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_forward"
                    app:tint="@android:color/holo_red_dark" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/del_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/del_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:text="Delete Contact"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/del_card_text_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_forward"
                    app:tint="@android:color/holo_red_dark" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>