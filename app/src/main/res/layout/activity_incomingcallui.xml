<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B171F"
    android:fitsSystemWindows="true"
    tools:context=".callHandler.Incomingcallui">

    <RelativeLayout
        android:id="@+id/reject_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_reject_call"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cancel_msg_reject"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_cancel" />


            <TextView
                android:id="@+id/reject_msg1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_reject_call"
                android:gravity="center"
                android:maxLength="41"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Can't talk now. Call me later?"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reject_msg2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_reject_call"
                android:gravity="center"
                android:maxLength="41"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="I'll call you right back."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reject_msg3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_reject_call"
                android:gravity="center"
                android:maxLength="41"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Busy! Call me later."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reject_msg4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_reject_call"
                android:gravity="center"
                android:maxLength="41"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Can't talk now. What's up?"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reject_msg5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_reject_call"
                android:gravity="center"
                android:maxLength="41"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Wait a moment. What's going?"
                android:textSize="16sp" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/incoming_call_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:theme="@style/Theme.Jcaller.Incoming">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#000"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/incoming_call_ui_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_contact" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/name_ui_show"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:theme="@style/Theme.Jcaller.Incoming" />

        <TextView
            android:id="@+id/number_ui_show"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_ui_show"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:theme="@style/Theme.Jcaller.Incoming" />

        <TextView
            android:id="@+id/status_ui_show"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number_ui_show"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:theme="@style/Theme.Jcaller.Incoming" />


        <androidx.cardview.widget.CardView
            android:id="@+id/end"
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:layout_above="@+id/pick"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#919A9D"
            app:cardCornerRadius="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:text="slide to Decline"
                android:textAllCaps="true"
                android:textColor="#F44336"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/end_call_btn"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="95"
                android:progressDrawable="@drawable/des_call_hover"
                android:theme="@style/Theme.Jcaller.Incoming"
                android:thumb="@drawable/deny_call_swipe" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pick"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:backgroundTint="#919A9D"
            app:cardCornerRadius="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:text="slide to answer"
                android:textAllCaps="true"
                android:textColor="#525659"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/pick_call_btn"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="10dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="5"
                android:progressDrawable="@drawable/des_call_hover"
                android:secondaryProgressTint="#00FBFBFB"
                android:theme="@style/Theme.Jcaller.Incoming"
                android:thumb="@drawable/ic_call_swipe" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/reject_call_msg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/incoming_message" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:text="Message"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>